<!DOCTYPE html>
<html>
<head>
  <title>Jumble</title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"> </script> 
  <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js" type="text/javascript"> </script> 
  <%= javascript_include_tag ('application') %>
  <%= javascript_include_tag ('bootstrap') %>
  <%= stylesheet_link_tag 'bootstrap', :media => "all" %>
  <%= stylesheet_link_tag 'application', :media => "all" %>
  <%= stylesheet_link_tag 'hangman', :media => "all" %>
  <%= stylesheet_link_tag 'find_words', :media => "all" %>
  <%= stylesheet_link_tag 'find_words_screen' %>
  <%= csrf_meta_tag %>
  <style type="text/css" media="print">
    @page
    {
      size: landscape;
    }
  </style>

</head>

<body>
<div class="wrapper">
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <%= link_to "SpellApp", {:controller => "home", :action => "home"}, :class => "brand" %>
        <% if current_user %>
          <ul class="nav pull-left">
            <li <%=is_active_page?("Common Words") ? "class=active" : "" %> > <%= link_to "Common Words", {:controller => "home", :action => "common_words"} %> </li>
            <li <%=is_active_page?("Inventure Words") ? "class=active" : "" %> > <%= link_to "Inventure Words", {:controller => "home", :action => "choose_school_class_week", :school => "Inventure Academy"} %> </li>
            <li <%=is_active_page?("Spell Bee Words") ? "class=active" : "" %> > <%= link_to "Spell Bee Words", {:controller => "home", :action => "choose_spell_level"} %> </li>
          </ul>
          <ul class="nav pull-right">
            <li <%=is_active_page?("Teachers") ? "class=active" : "" %> > <%= link_to "Teachers/Parents", {:controller => "teachers", :action => "home"} %> </li>
            <li <%=is_active_page?("History") ? "class=active" : "" %> > <%= link_to "History", {:controller => "home", :action => "score_history"} %> </li>
            <% if current_user.print_name == '' %>
            <li> <a href="/logout" id='my_logout'> Logout </a> </li>
            <% else %>
            <li class="dropdown" >
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.print_name %></a>
              <ul class="dropdown-menu">
                <li> <a href="/logout" id='my_logout'> Logout </a> </li>
              </ul>
            </li>
            <% end %>
          </ul>
        <% else %>
          <ul class="nav pull-right">
            <li <%=is_active_page?("Teachers") ? "class=active" : "" %> > <%= link_to "Teachers/Parents", {:controller => "teachers", :action => "home"} %> </li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>

  <div id="allcontent">
    <div class="container" id="content">
    <% if flash[:error] %>
      <div class="alert-message error" data-alert="alert"">
        <a class="close" href="#">x</a>
        <p><strong><%= flash[:error] %> </strong></p>
      </div>
      <% flash[:error] = nil %>
    <% end %>
    <% if flash[:notice] %>
      <div class="alert-message success" data-alert="alert"">
        <a class="close" href="#">x</a>
        <p><strong><%= flash[:notice] %> </strong></p>
      </div>
      <% flash[:notice] = nil %>
    <% end %>

    <%= yield %>
    </div>
  </div>
  <div class="push"> </div>
</div>
<% if !is_active_page?("LOGIN") %>
<footer>
  <hr>
  <%= link_to "About", :controller => "home", :action => "about" %>
  <%= link_to "Privacy", :controller => "home", :action => "privacy" %>
</footer>
<% end %>
</body>
</html>
