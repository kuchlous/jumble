<%= stylesheet_link_tag ('math') %>
<%= javascript_include_tag ('learn_table') %>
<div class="row">
  <div class="offset4 span6">
    <table class="times_table">
      <tbody>
      <% 1.upto 10 do |i| %>
        <tr class="table_row" id=<%="row#{i}"%> > <td> <%= @number.to_s %> </td> <td> X </td> <td> <%= i.to_s %> </td> <td> =  </td> <td> <%= (@number*i).to_s %> </td> </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
